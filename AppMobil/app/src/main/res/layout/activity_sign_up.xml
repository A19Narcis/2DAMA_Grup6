<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titleIniciApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="40dp"
                android:textSize="40sp"
                android:textAlignment="center"
                android:text="Register" />

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/logo_rounded_hd"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="40dp"/>

            <EditText
                android:id="@+id/newNomtxt"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_background"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:inputType="text"
                android:hint="Nom"/>

            <EditText
                android:id="@+id/newCognomtxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:inputType="text"
                android:hint="Gognom"/>

            <EditText
                android:id="@+id/newUsertxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:inputType="text"
                android:hint="User"/>

            <EditText
                android:id="@+id/newPasstxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:inputType="textPassword"
                android:hint="Password"/>

            <EditText
                android:id="@+id/newDescrtxt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:paddingTop="10dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="DescripciÃ³"/>

            <EditText
                android:id="@+id/newEmailtxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:inputType="textEmailAddress"
                android:hint="Email"/>

            <EditText
                android:id="@+id/newNomUsertxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:inputType="textPostalAddress"
                android:hint="Location"/>

            <Button
                android:id="@+id/btnCreateUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="50dp"
                android:text="Create User" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>