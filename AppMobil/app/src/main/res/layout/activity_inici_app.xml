<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".IniciApp">

    <TextView
        android:id="@+id/titleIniciApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:text="Recicla APP" />


    <ImageView
        android:id="@+id/logoIniciApp"
        android:src="@drawable/logo_rounded_hd"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="160dp"/>

    <TextView
        android:id="@+id/txtNewUserQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textAlignment="textStart"
        android:text="No tens compte?" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:onClick="launchSignUp"
        android:text="Sign Up" />


    <TextView
        android:id="@+id/txtRegisteredUserQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textAlignment="textStart"
        android:text="Ja estÃ s registrat?" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:onClick="launchSignIn"
        android:text="Sign In" />

</LinearLayout>